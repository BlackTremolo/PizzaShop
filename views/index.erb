	<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title></title>
</head>
<body>
<h2>Welcomre to Pizza Shop!</h2>
<div class="row">
<% @products.each do |product|%>
	<div class="col-md-3">
		<div>
			<%= product.title %>
		</div>

		<div>
			<img src="<%= product.path_to_image %>">
		</div>

		<div>
			<%= product.description %>			
		</div>
		
		<div>
			Size: <%= product.size %> cm
		</div>
		
		<div>
			Price: <%= product.price %> rub
		</div>

		<div>
			<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= product.id %>)">Add to cart</button>
		</div>
	</div>
<%end%>
</div>
<br>
<br>
<button class="btn btn-primary" onclick="some()">Click me!</button>
</body>
</html>
